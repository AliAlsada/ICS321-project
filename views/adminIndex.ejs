<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/style/admin.css">
    <title>admin</title>
</head>

<body>

    <header>
        <%- include("./partials/adminHeader.ejs") %> 
    </header>

    <table class="editable " id="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Fname</th>
                <th>Lname</th>
                <th>phone</th>
                <th>country</th>
                <th>city</th>
                <th>update</th>
                <th>packages</th>

            </tr>


        </thead>

        <tbody>
            <% customers.forEach(customer=> { %>
                <tr id="<%=customer.customer_id%>/">
                    <th class=<%=customer.customer_id%>>
                        <%=customer.customer_id%>
                    </th>
                    <th class=<%=customer.customer_id%>>
                        <%=customer.email%>
                    </th>
                    <th class=<%=customer.customer_id%>>
                        <%=customer.Fname%>
                    </th>

                    <th class=<%=customer.customer_id%>>
                        <%=customer.Lname%>
                    </th>
                    <th class=<%=customer.customer_id%>>
                        <%=customer.phone%>
                    </th>
                    <th class=<%=customer.customer_id%>>
                        <%=customer.country%>
                    </th>
                    <th class=<%=customer.customer_id%>>
                        <%=customer.city%>
                    </th>
                    <td>
                        <button class="button-17 update" id=<%=customer.customer_id %> >update</button>
                    </td>
                    <td>
                        <a href="/index/<%=customer.customer_id %>/packages"><button class="button-17">Packages</button></a>
                    </td>
                </tr>

                <% }); %>
        </tbody>

    </table>

    <div class="recordBtnDiv">
        <button id="add-user">add-user</button>
    </div>

    <dialog class="modal" id="modal-user">

        <button class="button close-button-two close-button">X</button>
        
        <form class="form" method="post" action="/index/addUser">

            <div>
                <label class="email-text input-label" for="email">Email <br></label>
                <input type="email" name="email" id="signUp-email" class="email-input user-input" required>
            </div>

            <div>
                <label class="first-name-text" for="first-name-text">First Name <br></label>
                <input type="text" name="firstName" id="firstName" class="name-input user-input" required>
            </div>

            <div>
                <label class="last-name-text" for="last-name-text">Last Name <br></label>
                <input type="text" name="lastName" id="lastName" class="name-input user-input" required>
            </div>

            <div>
                <label class="phone" for="phone">Phone<br></label>
                <input type="tel" name="phone" id="phone" class="user-input" pattern=^((?:[+?0?0?966]+)(?:\s?\d{2})(?:\s?\d{7}))$ required>
            </div>

            <div>
                <label class="password-text input-label" for="password">Password <br></label>
                <input type="password" name="password" id="signUp-password" class="password-input user-input" required>
            </div>

            <select id="country" name="country" class="user-input">
                <option>Select Country</option>
                <option value="SA">Saudi Arabia</option>
            </select>

            <select id="city" name="city" class="user-input">
                <option>Select City</option>
                <option value="RY">Riyadh</option>
                <option value="JE">Jeddah</option>
                <option value="ME">Mecca</option>
                <option value="DM">Dammam</option>
                <option value="DH">Dahran</option>
                <option value="SF">Safwa</option>
                <option value="QF">Qatif</option>
                <option value="AB">Abha</option>
            </select>


            <div>
                <button class="button submit-button" type="submit">submit form</button>
            </div>
        </form>

    </dialog>



    <script src="/js/admin.js"></script>

</body>

</html>